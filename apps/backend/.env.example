# Server Configuration
NODE_ENV=development
PORT=4000
FRONTEND_URL=http://localhost:3000
LOG_LEVEL=info  # Options: error, warn, info, debug

# Database (PostgreSQL)
DATABASE_URL="postgresql://avault:avault_dev_password@localhost:5432/avault"

# Encryption (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Scheduler Configuration
SCHEDULER_CHECK_INTERVAL=60000     # Check for due jobs every 60 seconds
SCHEDULER_LOCK_TTL=60000           # Lock expires after 60 seconds

# Google OAuth 2.0
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URI=http://localhost:4000/api/auth/google/callback

# NAS Mount Path
NAS_MOUNT_PATH=/mnt/nas

# Worker Configuration
WORKER_CONCURRENCY=2

# Optional: AWS S3 (for future S3 support)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
