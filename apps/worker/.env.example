# Database (PostgreSQL)
DATABASE_URL="postgresql://avault:avault_dev_password@localhost:5432/avault"

# Redis (for BullMQ job queue)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Encryption (Generate with: openssl rand -hex 32)
ENCRYPTION_KEY=your-32-byte-hex-key-here

# Google OAuth 2.0 (for decrypting credentials)
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret

# NAS Mount Path
NAS_MOUNT_PATH=/mnt/nas

# Worker Configuration
WORKER_CONCURRENCY=2

# Upload Performance Configuration
CONCURRENT_UPLOADS=10              # Number of files to upload in parallel (default: 10)
PROGRESS_THROTTLE_MS=500           # Progress callback interval in ms (default: 500)
STREAM_HIGH_WATER_MARK=1048576     # Stream buffer size in bytes (default: 1MB)

# Log Persistence Configuration
LOG_RETENTION_DAYS=30            # Keep logs for 30 days
LOG_BUFFER_SIZE=50               # Batch size for database writes
LOG_FLUSH_INTERVAL_MS=2000       # Flush logs every 2 seconds
